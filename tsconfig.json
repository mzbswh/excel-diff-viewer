{
	"compilerOptions": {
		"module": "ES2020",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["src/shared/*"],
			"@utils/*": ["src/utils/*"]
		},
		"incremental": true,
		"tsBuildInfoFile": ".tsbuildinfo"
	},
	"exclude": [
		"exampleProject/**/*",
		"node_modules",
		"dist",
		"out",
		"**/*.test.ts",
		"**/*.spec.ts"
	],
	"include": [
		"src/**/*"
	]
}
